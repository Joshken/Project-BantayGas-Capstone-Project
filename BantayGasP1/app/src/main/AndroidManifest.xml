<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:name=".ui.BantayGasApp"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.BantayGasP1"
        tools:targetApi="31">
        
        <!-- Splash Activity (Main Launcher) -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BantayGasP1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1"/>
        
        <!-- Forgot Password Activity -->
        <activity
            android:name=".ui.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Verify Account Activity -->
        <activity
            android:name=".ui.VerifyAccountActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- New Password Activity -->
        <activity
            android:name=".ui.NewPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Password Updated Activity -->
        <activity
            android:name=".ui.PasswordUpdatedActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Sign Up Activity -->
        <activity
            android:name=".ui.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Welcome Activity -->
        <activity
            android:name=".ui.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Monitoring Activities -->
        <activity
            android:name=".ui.MonitoringActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        

        
        <!-- Sensors Activity -->
        <activity
            android:name=".ui.SensorsActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- User Management Activity -->
        <activity
            android:name=".ui.UserManageActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Settings Activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Profile Information Activity -->
        <activity
            android:name=".ui.ProfileInformationActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Removed obsolete EditProfileInformationActivity (no implementation) -->
        
        <!-- Edit Profile Activity (new) -->
        <activity
            android:name=".ui.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />

        <!-- Avatar Crop Activity hosting UCropFragment with top margin -->
        <activity
            android:name=".ui.AvatarCropActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BantayGasP1.UCrop" />
        
        <!-- Language & App Preferences Activity -->
        <activity
            android:name=".ui.LanguageAppPreferencesActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Help & Support Activity -->
        <activity
            android:name=".ui.HelpSupportActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- Developers Activity -->
        <activity
            android:name=".ui.DevelopersActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        <activity
            android:name=".ui.DeveloperBaguioActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        <activity
            android:name=".ui.DeveloperBarabatActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        <activity
            android:name=".ui.DeveloperMalicayActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        <activity
            android:name=".ui.DeveloperMamaliasActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        <activity
            android:name=".ui.AlertHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />

        
        <!-- User Overview Activity -->
        <activity
            android:name=".ui.UserOverviewActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1.Dialog" />
        
        <activity
            android:name=".ui.MonitoringViewDetailsCriticalActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <activity
            android:name=".ui.MonitoringViewDetailsNormalActivity"
            android:exported="false"
            android:theme="@style/Theme.BantayGasP1" />
        
        <!-- FileProvider for camera capture -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>