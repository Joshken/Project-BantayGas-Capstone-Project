<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_grad_1">

    

    <ImageView
        android:id="@+id/logoGlow"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/logo_glow"
        android:contentDescription="Logo Glow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Background blobs for depth -->
    <ImageView
        android:id="@+id/blobBlue"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/blob_blue"
        android:alpha="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-10dp" />

    <ImageView
        android:id="@+id/blobCyan"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/blob_cyan"
        android:alpha="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="-20dp" />

    <!-- Gentle parallax drifting sparkles -->
    <ImageView
        android:id="@+id/sparkle1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_sparkle"
        android:alpha="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp" />

    <ImageView
        android:id="@+id/sparkle2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_sparkle"
        android:alpha="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="200dp" />

    <ImageView
        android:id="@+id/sparkle3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_sparkle"
        android:alpha="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="140dp" />

    

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BANTAYGAS"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gas Monitoring &amp; Safety"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Small loading animation below the logo -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingRing"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:lottie_rawRes="@raw/ring_bold"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:contentDescription="Loading"
        app:layout_constraintTop_toBottomOf="@id/appSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOADING"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/loadingRing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Shimmer sweep overlay (moved during animation) -->
    <View
        android:id="@+id/shimmerSweep"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:background="@drawable/shimmer_sweep"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="@id/logoImageView" />

    <!-- Ripple ring behind logo at mid timeline -->
    <ImageView
        android:id="@+id/rippleRing"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ripple_ring"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="@id/logoImageView" />

    <!-- Overlay used for circular reveal exit -->
    <View
        android:id="@+id/revealOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>


