<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MonitoringNoFloorPlanActivity">

    <!-- Floor Plan Placeholder with X Overlay -->
    <FrameLayout
        android:id="@+id/floorPlanPlaceholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/floorplan_border"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/noFloorPlanText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.45"
        android:layout_marginTop="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Background Floor Plan Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sample_floorplan"
            android:scaleType="centerInside"
            android:contentDescription="Floor Plan Background"/>

        <!-- X Overlay -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ•"
            android:textSize="120sp"
            android:textColor="#00AEEF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:alpha="0.8"/>

    </FrameLayout>

    <TextView
        android:id="@+id/noFloorPlanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_floor_plan_added"
        android:textColor="#1A237E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/floorPlanPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/uploadFloorPlanButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/action_upload_floor_plan"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_bg"
        app:layout_constraintTop_toBottomOf="@id/noFloorPlanText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
